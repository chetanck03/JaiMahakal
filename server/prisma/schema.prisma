generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  password     String?
  name         String
  googleId     String?  @unique
  authProvider String   @default("email") // email, google
  isVerified   Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  workspaces WorkspaceMember[]
  tasks      Task[]
  feedbacks  Feedback[]
  otpCodes   OTPCode[]
  messages   Message[]
  channelMemberships ChannelMember[]
}

model OTPCode {
  id        String   @id @default(cuid())
  code      String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([code])
}

model Workspace {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members    WorkspaceMember[]
  tasks      Task[]
  milestones Milestone[]
  feedbacks  FeedbackRequest[]
  messages   Message[]
  channels   Channel[]
  
  @@index([createdAt])
}

model Channel {
  id          String   @id @default(cuid())
  name        String
  description String?
  type        String   @default("public") // public, private, dm
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  messages    Message[]
  members     ChannelMember[]
  
  @@index([workspaceId])
  @@index([type])
}

model ChannelMember {
  id        String   @id @default(cuid())
  joinedAt  DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  channelId String
  channel   Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)
  
  @@unique([userId, channelId])
  @@index([channelId])
  @@index([userId])
}

model Message {
  id          String   @id @default(cuid())
  content     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  channelId   String?
  channel     Channel?  @relation(fields: [channelId], references: [id], onDelete: Cascade)
  
  @@index([workspaceId])
  @@index([userId])
  @@index([channelId])
  @@index([createdAt])
}

model WorkspaceMember {
  id          String   @id @default(cuid())
  role        String   @default("member") // owner, member
  joinedAt    DateTime @default(now())
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([userId, workspaceId])
  @@index([workspaceId])
  @@index([userId])
}

model Task {
  id          String    @id @default(cuid())
  title       String
  description String?
  status      String    @default("todo") // todo, in-progress, done, blocked
  priority    String    @default("medium") // low, medium, high
  dueDate     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  assigneeId  String?
  assignee    User?     @relation(fields: [assigneeId], references: [id], onDelete: SetNull)
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  milestoneId String?
  milestone   Milestone? @relation(fields: [milestoneId], references: [id], onDelete: SetNull)
  
  @@index([workspaceId])
  @@index([assigneeId])
  @@index([status])
}

model Milestone {
  id          String   @id @default(cuid())
  title       String
  description String?
  targetDate  DateTime
  status      String   @default("pending") // pending, in-progress, completed
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  tasks       Task[]
  
  @@index([workspaceId])
  @@index([status])
}

model FeedbackRequest {
  id            String   @id @default(cuid())
  title         String
  description   String?
  shareableLink String   @unique
  createdAt     DateTime @default(now())
  
  workspaceId   String
  workspace     Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  feedbacks     Feedback[]
  
  @@index([workspaceId])
  @@index([shareableLink])
}

model Feedback {
  id            String   @id @default(cuid())
  content       String
  rating        Int?
  isAddressed   Boolean  @default(false)
  createdAt     DateTime @default(now())
  
  // Submitter info (for anonymous/public feedback)
  submitterName  String?
  submitterEmail String?
  
  requestId     String
  request       FeedbackRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  
  userId        String?
  user          User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  @@index([requestId])
  @@index([userId])
}
